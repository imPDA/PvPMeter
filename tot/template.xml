<GuiXml>
    <Controls>
        <Label name="IPM_TOT_Listing_Column1" horizontalAlignment="RIGHT" virtual="true"><Dimensions x="40" y="32" /></Label>
		<Label name="IPM_TOT_Listing_Column2" virtual="true"><Dimensions x="50" y="32" /></Label>
		<!-- <Label name="IPM_TOT_Listing_Column3" virtual="true"><Dimensions x="220" y="32" /></Label> -->
		<Label name="IPM_TOT_Listing_Column4" virtual="true"><Dimensions x="400" y="32" /></Label>
		<Label name="IPM_TOT_Listing_Column5" horizontalAlignment="CENTER" virtual="true"><Dimensions x="32" y="32" /></Label>
		<Label name="IPM_TOT_Listing_Column6" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_TOT_Listing_Column7" horizontalAlignment="CENTER" virtual="true"><Dimensions x="90" y="32" /></Label>
		<Label name="IPM_TOT_Listing_Column8" horizontalAlignment="CENTER" virtual="true"><Dimensions x="90" y="32" /></Label>
		<Label name="IPM_TOT_Listing_Column9" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_TOT_Listing_Column10" horizontalAlignment="CENTER" virtual="true"><Dimensions x="32" y="32" /></Label>
		
		<Label name="IPM_TOTSummaryRow" inherits="ZO_SelectableLabel" virtual="true">
			<Dimensions y="32" />
			<Controls>
				<!-- TODO: texture order -->
				<Texture name="$(parent)BG" textureFile="EsoUI/Art/Miscellaneous/listItem_selectedHighlight.dds" hidden="true" color="232323"> <!-- 4b4b4b -->
					<Dimensions x="900" y="52" />
					<Anchor point="TOPLEFT" />
					<!-- TODO: ideally, get rid of Dimensions -->
					<!-- TODO: find out why this texture less than row with height 32 -->
				</Texture>
				<Label name="$(parent)Index" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column1">
					<Anchor point="TOPLEFT" relativeTo="$(parent)" />
				</Label>
				<Label name="$(parent)Duration" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column2">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Index" relativePoint="TOPRIGHT" offsetX="20" />
				</Label>
				<!-- <Label name="$(parent)PlayerName" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column3">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Duration" relativePoint="TOPRIGHT" />
				</Label> -->
				<Label name="$(parent)OpponentName" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column4">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Duration" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)FirstPick" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column5">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentName" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Score" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column6">
					<Anchor point="TOPLEFT" relativeTo="$(parent)FirstPick" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Result" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column10">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Score" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)PlayerMMR" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column7">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Result" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Rank" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column8">
					<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerMMR" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)TopPercent" inherits="IPM_Listing_Cell IPM_TOT_Listing_Column9">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Rank" relativePoint="TOPRIGHT" />
				</Label>
			</Controls>
		</Label>

		<Control name="IPM_TOT_Template" virtual="true">
			<AnchorFill />
			<Controls>
				<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FFFF00" centerColor="000000" /> -->

				<Texture name="$(parent)Warning" textureFile="EsoUI/Art/Miscellaneous/eso_icon_warning.dds" color="FFFF00" level="1" hidden="true">
					<Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="150" />
					<Dimensions x="48" y="48" />
				</Texture>

				<Backdrop name="$(parent)OpponentSearch" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
					<Anchor point="TOPRIGHT" offsetX="-16" offsetY="8" />
                    <Dimensions x="270" />
                    <Controls>
                        <EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop" defaultText="SI_REQUEST_NAME_INSTRUCTIONS" />
						<Label name="$(parent)Label" inherits="IPM_StatName" text="Opponent:">
							<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="-4" />
						</Label>
                    </Controls>
                </Backdrop>

				<!-- <Control name="$(parent)FilterPlayerCharacters" inherits="ZO_MultiselectComboBox">
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)OpponentSearch" relativePoint="BOTTOMRIGHT" offsetX="2" offsetY="8" />
					<Dimensions x="270" y="32" />
				</Control> -->

				<Control name="$(parent)StatsBlock">
					<Anchor point="TOPLEFT" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetY="150" />
					<Controls>
						<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
						<Control name="$(parent)Shit" inherits="IPM_Shit">
							<Anchor point="TOPLEFT" />
						</Control>

						<Label name="$(parent)TotalGames" inherits="IPM_StatName" text="Games recorded:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" offsetX="110" offsetY="6" />
						</Label>
						<Label name="$(parent)TotalGamesValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalGames" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>
						
						<Label name="$(parent)Winrate" inherits="IPM_StatName" text="Winrate:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalGames" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)WinrateValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Winrate" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>

						<!-- <Label name="$(parent)WinrateFP" inherits="IPM_StatName" text="Winrate (1pick):">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Winrate" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)WinrateFPValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)WinrateFP" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>

						<Label name="$(parent)WinrateSP" inherits="IPM_StatName" text="Winrate (2pick):">
							<Anchor point="TOPLEFT" relativeTo="$(parent)WinrateFP" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)WinrateSPValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)WinrateSP" relativePoint="TOPRIGHT" offsetX="5" />
						</Label> -->
					</Controls>
				</Control>
				
				<Control name="$(parent)Divider">
					<Anchor point="TOPLEFT" relativeTo="$(parent)StatsBlock" relativePoint="BOTTOMLEFT" offsetY="10" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)StatsBlock" relativePoint="BOTTOMRIGHT" offsetY="24" />
					<Controls>
						<Texture name="$(parent)Left" textureFile="EsoUI/Art/Guild/sectionDivider_left.dds">
							<Anchor point="TOPLEFT"/>
							<Dimensions x="880" y="4"/>
						</Texture>
						<Texture name="$(parent)Right" textureFile="EsoUI/Art/Guild/sectionDivider_right.dds">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Left" relativePoint="TOPRIGHT"/>
							<Dimensions x="100" y="4"/>
						</Texture>
					</Controls>
				</Control>

				<Control name="$(parent)Listing">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Divider" relativePoint="BOTTOMLEFT" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" />
					<Controls>
						<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
						<Control name="$(parent)Header">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetY="40"/>
							<Controls>
								<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
								<Label name="$(parent)Index" inherits="IPM_Listing_Header IPM_TOT_Listing_Column1" text="###">
									<Anchor point="TOPLEFT" relativeTo="$(parent)" />
								</Label>
								<Label name="$(parent)Duration" inherits="IPM_Listing_Header IPM_TOT_Listing_Column2" text="Time">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Index" relativePoint="TOPRIGHT" offsetX="20" />
								</Label>
								<!-- <Label name="$(parent)PlayerName" inherits="IPM_Listing_Header IPM_TOT_Listing_Column3" text="Player">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Duration" relativePoint="TOPRIGHT" />
								</Label> -->
								<Label name="$(parent)OpponentName" inherits="IPM_Listing_Header IPM_TOT_Listing_Column4" text="Opponent">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Duration" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)FirstPick" inherits="IPM_Listing_Header IPM_TOT_Listing_Column5" text="FP">
									<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentName" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Score" inherits="IPM_Listing_Header IPM_TOT_Listing_Column6" text="Score">
									<Anchor point="TOPLEFT" relativeTo="$(parent)FirstPick" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Result" inherits="IPM_Listing_Header IPM_TOT_Listing_Column10" text="W/L">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Score" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)PlayerMMR" inherits="IPM_Listing_Header IPM_TOT_Listing_Column7" text="MMR">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Result" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Rank" inherits="IPM_Listing_Header IPM_TOT_Listing_Column8" text="Rank">
									<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerMMR" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)TopPercent" inherits="IPM_Listing_Header IPM_TOT_Listing_Column9" text="Top%">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Rank" relativePoint="TOPRIGHT" />
								</Label>
							</Controls>
						</Control>
						<Control name="$(parent)ScrollableList" inherits="ZO_ScrollList">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Header" relativePoint="BOTTOMLEFT" />
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" />
							<Controls>
								<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="0000FF" centerColor="00FF00" /> -->
							</Controls>
						</Control>
					</Controls>
				</Control>
			</Controls>
		</Control>

		<Label name="IPM_OpponentPreview" font="ZoFontHeader2" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="LEFT" text="-" virtual="true">
			<Dimensions y="24" />
		</Label>

		<TopLevelControl name="IPM_TOT_OpponentPreview" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true">
			<Dimensions x="400" y="200" />
			<Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" />

			<OnMoveStop>
                IPM_OpponentPreview_OnMoveStop(self)
            </OnMoveStop>

			<Controls>
				<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FFFF00" centerColor="000000" /> -->

				<Label name="$(parent)OpponentName" inherits="IPM_OpponentPreview" text="Opponent:">
					<Anchor point="TOPLEFT" />
				</Label>
				<Label name="$(parent)OpponentNameValue" inherits="IPM_OpponentPreview">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentName" relativePoint="TOPRIGHT" offsetX="4" />
				</Label>

				<Label name="$(parent)OpponentMMR" inherits="IPM_OpponentPreview" text="Current MMR:">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentName" relativePoint="BOTTOMLEFT" />
				</Label>
				<Label name="$(parent)OpponentMMRValue" inherits="IPM_OpponentPreview">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentMMR" relativePoint="TOPRIGHT" offsetX="4" />
				</Label>

				<Label name="$(parent)TotalGames" inherits="IPM_OpponentPreview" text="Total games:">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentMMR" relativePoint="BOTTOMLEFT" />
				</Label>
				<Label name="$(parent)TotalGamesValue" inherits="IPM_OpponentPreview">
					<Anchor point="TOPLEFT" relativeTo="$(parent)TotalGames" relativePoint="TOPRIGHT" offsetX="4" />
				</Label>

				<Label name="$(parent)Winrate" inherits="IPM_OpponentPreview" text="Winrate:">
					<Anchor point="TOPLEFT" relativeTo="$(parent)TotalGames" relativePoint="BOTTOMLEFT" />
				</Label>
				<Label name="$(parent)WinrateValue" inherits="IPM_OpponentPreview">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Winrate" relativePoint="TOPRIGHT" offsetX="4" />
				</Label>
			</Controls>
		</TopLevelControl>
    </Controls>
</GuiXml>