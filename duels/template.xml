<GuiXml>
    <Controls>
        <Label name="IPM_Duels_Listing_Column1" horizontalAlignment="RIGHT" virtual="true"><Dimensions x="40" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column9" virtual="true"><Dimensions x="50" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column2" virtual="true"><Dimensions x="32" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column11" virtual="true"><Dimensions x="36" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column3" virtual="true"><Dimensions x="190" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column4" virtual="true"><Dimensions x="32" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column12" virtual="true"><Dimensions x="36" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column5" virtual="true"><Dimensions x="190" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column6" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column7" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column8" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_Duels_Listing_Column10" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		
		<Label name="IPM_DuelSummaryRow" inherits="ZO_SelectableLabel" virtual="true">
			<Dimensions y="32" />
			<Controls>
				<!-- TODO: texture order -->
				<Texture name="$(parent)BG" textureFile="EsoUI/Art/Miscellaneous/listItem_selectedHighlight.dds" hidden="true">
					<Dimensions x="900" y="52" />
					<Anchor point="TOPLEFT" />
					<!-- TODO: ideally, get rid of Dimensions -->
					<!-- TODO: find out why this texture less than row with height 32 -->
				</Texture>
				<Label name="$(parent)Index" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column1">
					<Anchor point="TOPLEFT" relativeTo="$(parent)" />
				</Label>
				<Label name="$(parent)Duration" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column9">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Index" relativePoint="TOPRIGHT" offsetX="20" />
				</Label>
				<Label name="$(parent)PlayerClass" inherits="IPM_Duels_Listing_Column2">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Duration" relativePoint="TOPRIGHT" />
					<Controls>
						<Texture name="$(parent)ClassIcon" textureFile="EsoUI/Art/Icons/icon_missing.dds">
							<Anchor point="TOPLEFT" />
							<Dimensions x="32" y="32" />
						</Texture>
					</Controls>
				</Label>
				<Label name="$(parent)PlayerRace" inherits="IPM_Duels_Listing_Column11">
					<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerClass" relativePoint="TOPRIGHT" />
					<Controls>
						<Texture name="$(parent)RaceIcon" textureFile="EsoUI/Art/Icons/icon_missing.dds">
							<Anchor point="TOPLEFT" />
							<Dimensions x="32" y="32" />
						</Texture>
					</Controls>
				</Label>
				<Label name="$(parent)PlayerCharacterName" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column3">
					<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerRace" relativePoint="TOPRIGHT" />
				</Label>

				<Label name="$(parent)OpponentClass" inherits="IPM_Duels_Listing_Column4">
					<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerCharacterName" relativePoint="TOPRIGHT" />
					<Controls>
						<Texture name="$(parent)ClassIcon" textureFile="EsoUI/Art/Icons/icon_missing.dds">
							<Anchor point="TOPLEFT" />
							<Dimensions x="32" y="32" />
						</Texture>
					</Controls>
				</Label>
				<Label name="$(parent)OpponentRace" inherits="IPM_Duels_Listing_Column12">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentClass" relativePoint="TOPRIGHT" />
					<Controls>
						<Texture name="$(parent)RaceIcon" textureFile="EsoUI/Art/Icons/icon_missing.dds">
							<Anchor point="TOPLEFT" />
							<Dimensions x="32" y="32" />
						</Texture>
					</Controls>
				</Label>
				<Label name="$(parent)OpponentCharacterName" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column5">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentRace" relativePoint="TOPRIGHT" />
				</Label>
				
				<!-- <Label name="$(parent)Map" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column4">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Class" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Kills" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column5">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Map" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Deaths" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column6">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Kills" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Assists" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column7">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Deaths" relativePoint="TOPRIGHT" />
				</Label> -->
				<Label name="$(parent)DamageDone" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column6">
					<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentCharacterName" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)DamageTaken" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column8">
					<Anchor point="TOPLEFT" relativeTo="$(parent)DamageDone" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)HealingTaken" inherits="IPM_Listing_Cell IPM_Duels_Listing_Column7">
					<Anchor point="TOPLEFT" relativeTo="$(parent)DamageTaken" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)DamageShielded" inherits="IPM_Listing_Header IPM_Duels_Listing_Column10">
					<Anchor point="TOPLEFT" relativeTo="$(parent)HealingTaken" relativePoint="TOPRIGHT" />
				</Label>
			</Controls>
		</Label>

		<Control name="IPM_Duels_Template" virtual="true">
			<AnchorFill />
			<Controls>
				<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FFFF00" centerColor="000000" /> -->

				<Texture name="$(parent)Warning" textureFile="EsoUI/Art/Miscellaneous/eso_icon_warning.dds" color="FFFF00" level="1">
					<Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="150" />
					<Dimensions x="48" y="48"/>
				</Texture>

				<!-- <Control name="$(parent)FilterTeamSize" inherits="ZO_MultiselectComboBox">
					<Dimensions x="222" y="32" />
					<Anchor point="TOPRIGHT" offsetX="-16" offsetY="8" />
				</Control>

				<Control name="$(parent)FilterGameType" inherits="ZO_MultiselectComboBox">
					<Dimensions x="222" y="32" />
					<Anchor point="TOPLEFT" relativeTo="$(parent)FilterTeamSize" relativePoint="BOTTOMLEFT" offsetY="4" />
				</Control> -->

				<!-- Move it to stat block -->
	
				<!-- <Backdrop name="$(parent)PlayerSearch" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
                    <Anchor point="TOPRIGHT" offsetX="-16" offsetY="8" />
                    <Dimensions x="270" />
                    <Controls>
                        <EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop" defaultText="SI_REQUEST_NAME_INSTRUCTIONS" />
						<Label name="$(parent)Label" inherits="IPM_StatName" text="Player:">
							<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="-4" />
						</Label>
                    </Controls>
                </Backdrop> -->

				<Backdrop name="$(parent)OpponentSearch" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
					<Anchor point="TOPRIGHT" offsetX="-16" offsetY="8" />
                    <Dimensions x="270" />
                    <Controls>
                        <EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop" defaultText="SI_REQUEST_NAME_INSTRUCTIONS" />
						<Label name="$(parent)Label" inherits="IPM_StatName" text="Opponent:">
							<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="-4" />
						</Label>
                    </Controls>
                </Backdrop>

				<Control name="$(parent)FilterPlayerCharacters" inherits="ZO_MultiselectComboBox">
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)OpponentSearch" relativePoint="BOTTOMRIGHT" offsetX="2" offsetY="8" />
					<Dimensions x="270" y="32" />
					<Controls>
						<!-- TODO: virtualize filter -->
						<Button name="$(parent)SelectButton" inherits="ZO_DefaultButton" text="Select All">
							<Dimensions x="200" />
							<Anchor point="TOP" relativeTo="$(parent)" relativePoint="BOTTOM" />
						</Button>
					</Controls>
				</Control>

				<Control name="$(parent)StatsBlock">
					<Anchor point="TOPLEFT" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetY="150" />
					<Controls>
						<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
						<Control name="$(parent)Shit" inherits="IPM_Shit">
							<Anchor point="TOPLEFT" />
						</Control>

						<Label name="$(parent)TotalDuels" inherits="IPM_StatName" text="Duels recorded:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" offsetX="110" offsetY="6" />
						</Label>
						<Label name="$(parent)TotalDuelsValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalDuels" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>

						<Label name="$(parent)Winrate" inherits="IPM_StatName" text="Winrate:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalDuels" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)WinrateValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Winrate" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>

						<Label name="$(parent)Totals" inherits="IPM_StatName" text="Total damage/healing/damage taken:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Winrate" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)TotalsValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Totals" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>
					</Controls>
				</Control>
				
				<Control name="$(parent)Divider">
					<Anchor point="TOPLEFT" relativeTo="$(parent)StatsBlock" relativePoint="BOTTOMLEFT" offsetY="10" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)StatsBlock" relativePoint="BOTTOMRIGHT" offsetY="24" />
					<Controls>
						<Texture name="$(parent)Left" textureFile="EsoUI/Art/Guild/sectionDivider_left.dds">
							<Anchor point="TOPLEFT"/>
							<Dimensions x="880" y="4"/>
						</Texture>
						<Texture name="$(parent)Right" textureFile="EsoUI/Art/Guild/sectionDivider_right.dds">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Left" relativePoint="TOPRIGHT"/>
							<Dimensions x="100" y="4"/>
						</Texture>
					</Controls>
				</Control>

				<Control name="$(parent)Listing">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Divider" relativePoint="BOTTOMLEFT" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" />
					<Controls>
						<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
						<Control name="$(parent)Header">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetY="40"/>
							<Controls>
								<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
								<Label name="$(parent)Index" inherits="IPM_Listing_Header IPM_Duels_Listing_Column1" text="###">
									<Anchor point="TOPLEFT" relativeTo="$(parent)" />
								</Label>
								<Label name="$(parent)Duration" inherits="IPM_Listing_Header IPM_Duels_Listing_Column9" text="Time">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Index" relativePoint="TOPRIGHT" offsetX="20" />
								</Label>
								<Label name="$(parent)PlayerClass" inherits="IPM_Listing_Header IPM_Duels_Listing_Column2" text="">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Duration" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)PlayerRace" inherits="IPM_Listing_Header IPM_Duels_Listing_Column11" text="">
									<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerClass" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)PlayerCharacterName" inherits="IPM_Listing_Header IPM_Duels_Listing_Column3" text="Player Name">
									<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerRace" relativePoint="TOPRIGHT" />
								</Label>
								<!-- <Control name="$(parent)Class" inherits="IPM_Duels_Listing_Column3">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Type" relativePoint="TOPRIGHT" />
									<Controls>
										<Texture name="$(parent)ClassIcon" textureFile="EsoUI/Art/Icons/icon_missing.dds">
											<Anchor point="TOPLEFT" />
											<Dimensions x="32" y="32" />
										</Texture>
									</Controls>
								</Control> -->
								<!-- <Label name="$(parent)C3" inherits="IPM_Listing_Header IPM_Duels_Listing_Column3"><Anchor point="TOPLEFT" relativeTo="$(parent)ClassIcon" relativePoint="TOPRIGHT" /></Label> -->
								<Label name="$(parent)OpponentClass" inherits="IPM_Listing_Header IPM_Duels_Listing_Column4" text="">
									<Anchor point="TOPLEFT" relativeTo="$(parent)PlayerCharacterName" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)OpponentRace" inherits="IPM_Listing_Header IPM_Duels_Listing_Column12" text="">
									<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentClass" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)OpponentCharacterName" inherits="IPM_Listing_Header IPM_Duels_Listing_Column5" text="Opponent Name">
									<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentRace" relativePoint="TOPRIGHT" />
								</Label>
								<!-- <Label name="$(parent)Deaths" inherits="IPM_Listing_Header IPM_Duels_Listing_Column6" text="Deaths">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Kills" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Assists" inherits="IPM_Listing_Header IPM_Duels_Listing_Column7" text="Assists">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Deaths" relativePoint="TOPRIGHT" />
								</Label> -->
								<Label name="$(parent)DamageDone" inherits="IPM_Listing_Header IPM_Duels_Listing_Column6" text="Done">
									<Anchor point="TOPLEFT" relativeTo="$(parent)OpponentCharacterName" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)DamageTaken" inherits="IPM_Listing_Header IPM_Duels_Listing_Column8" text="Taken">
									<Anchor point="TOPLEFT" relativeTo="$(parent)DamageDone" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)HealingTaken" inherits="IPM_Listing_Header IPM_Duels_Listing_Column7" text="Heal">
									<Anchor point="TOPLEFT" relativeTo="$(parent)DamageTaken" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)DamageShielded" inherits="IPM_Listing_Header IPM_Duels_Listing_Column10" text="Shielded">
									<Anchor point="TOPLEFT" relativeTo="$(parent)HealingTaken" relativePoint="TOPRIGHT" />
								</Label>
							</Controls>
						</Control>
						<Control name="$(parent)ScrollableList" inherits="ZO_ScrollList">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Header" relativePoint="BOTTOMLEFT" />
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" />
							<Controls>
								<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="0000FF" centerColor="00FF00" /> -->
							</Controls>
						</Control>
					</Controls>
				</Control>
			</Controls>
		</Control>
    </Controls>
</GuiXml>