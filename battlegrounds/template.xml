<GuiXml>
    <Controls>
        <Label name="IPM_BGs_Listing_Column1" virtual="true"><Dimensions x="30" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column2" virtual="true"><Dimensions x="50" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column4" virtual="true"><Dimensions x="180" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column3" virtual="true"><Dimensions x="50" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column11" horizontalAlignment="CENTER" virtual="true"><Dimensions x="90" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column5" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column6" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column7" horizontalAlignment="CENTER" virtual="true"><Dimensions x="70" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column8" horizontalAlignment="RIGHT" virtual="true"><Dimensions x="90" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column9" horizontalAlignment="RIGHT" virtual="true"><Dimensions x="90" y="32" /></Label>
		<Label name="IPM_BGs_Listing_Column10" horizontalAlignment="RIGHT" virtual="true"><Dimensions x="90" y="32" /></Label>

		<Label name="IPM_MatchSummaryRow" inherits="ZO_SelectableLabel" virtual="true">
			<Dimensions y="32" />
			<Controls>
				<!-- TODO: texture order -->
				<Texture name="$(parent)BG" textureFile="EsoUI/Art/Miscellaneous/listItem_selectedHighlight.dds" hidden="true">
					<Dimensions x="900" y="52" />
					<Anchor point="TOPLEFT" />
					<!-- TODO: ideally, get rid of Dimensions -->
					<!-- TODO: find out why this texture less than row with height 32 -->
				</Texture>
				<Label name="$(parent)Index" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column1" horizontalAlignment="RIGHT">
					<Anchor point="TOPLEFT" relativeTo="$(parent)" />
				</Label>
				<Label name="$(parent)Type" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column2">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Index" relativePoint="TOPRIGHT" offsetX="20"/>
				</Label>
				<Label name="$(parent)Map" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column4">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Type" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Class" inherits="IPM_BGs_Listing_Column3">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Map" relativePoint="TOPRIGHT" />
					<Controls>
						<Texture name="$(parent)ClassIcon" textureFile="EsoUI/Art/Icons/icon_missing.dds" level="1">
							<Anchor point="TOPLEFT" />
							<Dimensions x="32" y="32" />
						</Texture>
					</Controls>
				</Label>
				<Label name="$(parent)Score" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column11">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Class" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Kills" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column5">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Score" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Deaths" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column6">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Kills" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)Assists" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column7">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Deaths" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)DamageDone" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column8">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Assists" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)HealingDone" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column9">
					<Anchor point="TOPLEFT" relativeTo="$(parent)DamageDone" relativePoint="TOPRIGHT" />
				</Label>
				<Label name="$(parent)DamageTaken" inherits="IPM_Listing_Cell IPM_BGs_Listing_Column10">
					<Anchor point="TOPLEFT" relativeTo="$(parent)HealingDone" relativePoint="TOPRIGHT" />
				</Label>
			</Controls>
		</Label>

		<Control name="IPM_BGs_Template" virtual="true">
			<AnchorFill />
			<Controls>
				<Control name="$(parent)FilterTeamSize" inherits="ZO_MultiselectComboBox">
					<Dimensions x="222" y="32" />
					<Anchor point="TOPRIGHT" offsetX="-16" offsetY="8" />
				</Control>

				<Control name="$(parent)FilterGameType" inherits="ZO_MultiselectComboBox">
					<Dimensions x="222" y="32" />
					<Anchor point="TOPLEFT" relativeTo="$(parent)FilterTeamSize" relativePoint="BOTTOMLEFT" offsetY="4" />
				</Control>

				<Control name="$(parent)FilterPlayerCharacters" inherits="ZO_MultiselectComboBox">
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)FilterGameType" relativePoint="BOTTOMRIGHT" offsetY="4" />
					<Dimensions x="222" y="32" />
				</Control>

				<Control name="$(parent)StatsBlock">
					<Anchor point="TOPLEFT" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetY="150" />
					<Controls>
						<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
						<Control name="$(parent)Shit" inherits="IPM_Shit">
							<Anchor point="TOPLEFT" />
						</Control>

						<Label name="$(parent)TotalMatches" inherits="IPM_StatName" text="Matches recorded:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" offsetX="110" offsetY="6" />
						</Label>
						<Label name="$(parent)TotalMatchesValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalMatches" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>

						<Label name="$(parent)Winrate" inherits="IPM_StatName" text="Winrate:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalMatches" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)WinrateValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Winrate" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>

						<Label name="$(parent)TotalKDA" inherits="IPM_StatName" text="K/D/A (total):">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Winrate" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)TotalKDAValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalKDA" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>
						
						<Label name="$(parent)KDA" inherits="IPM_StatName" text="K/D/A:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)TotalKDA" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)KDAValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)KDA" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>

						<Label name="$(parent)Totals" inherits="IPM_StatName" text="Total damage/healing/damage taken:">
							<Anchor point="TOPLEFT" relativeTo="$(parent)KDA" relativePoint="BOTTOMLEFT" offsetY="6"/>
						</Label>
						<Label name="$(parent)TotalsValue" inherits="IPM_StatValue">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Totals" relativePoint="TOPRIGHT" offsetX="5" />
						</Label>
					</Controls>
				</Control>
				
				<Control name="$(parent)Divider">
					<Anchor point="TOPLEFT" relativeTo="$(parent)StatsBlock" relativePoint="BOTTOMLEFT" offsetY="10" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)StatsBlock" relativePoint="BOTTOMRIGHT" offsetY="24" />
					<Controls>
						<Texture name="$(parent)Left" textureFile="EsoUI/Art/Guild/sectionDivider_left.dds">
							<Anchor point="TOPLEFT"/>
							<Dimensions x="880" y="4"/>
						</Texture>
						<Texture name="$(parent)Right" textureFile="EsoUI/Art/Guild/sectionDivider_right.dds">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Left" relativePoint="TOPRIGHT"/>
							<Dimensions x="100" y="4"/>
						</Texture>
					</Controls>
				</Control>

				<Control name="$(parent)Listing">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Divider" relativePoint="BOTTOMLEFT" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" />
					<Controls>
						<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
						<Control name="$(parent)Header">
							<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetY="40"/>
							<Controls>
								<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="FF0000" centerColor="00FF00" /> -->
								<Label name="$(parent)Index" inherits="IPM_Listing_Header IPM_BGs_Listing_Column1" horizontalAlignment="RIGHT" text="###">
									<Anchor point="TOPLEFT" relativeTo="$(parent)" />
								</Label>
								<Label name="$(parent)Type" inherits="IPM_Listing_Header IPM_BGs_Listing_Column2" text="Type">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Index" relativePoint="TOPRIGHT" offsetX="20"/>
								</Label>
								<Label name="$(parent)Map" inherits="IPM_Listing_Header IPM_BGs_Listing_Column4" text="Map">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Type" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Class" inherits="IPM_Listing_Header IPM_BGs_Listing_Column3" text="Class">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Map" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Score" inherits="IPM_Listing_Header IPM_BGs_Listing_Column11" text="Score">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Class" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Kills" inherits="IPM_Listing_Header IPM_BGs_Listing_Column5" text="Kills">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Score" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Deaths" inherits="IPM_Listing_Header IPM_BGs_Listing_Column6" text="Deaths">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Kills" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)Assists" inherits="IPM_Listing_Header IPM_BGs_Listing_Column7" text="Assists">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Deaths" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)DamageDone" inherits="IPM_Listing_Header IPM_BGs_Listing_Column8" text="Damage">
									<Anchor point="TOPLEFT" relativeTo="$(parent)Assists" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)HealingDone" inherits="IPM_Listing_Header IPM_BGs_Listing_Column9" text="Healing">
									<Anchor point="TOPLEFT" relativeTo="$(parent)DamageDone" relativePoint="TOPRIGHT" />
								</Label>
								<Label name="$(parent)DamageTaken" inherits="IPM_Listing_Header IPM_BGs_Listing_Column10" text="D.Taken">
									<Anchor point="TOPLEFT" relativeTo="$(parent)HealingDone" relativePoint="TOPRIGHT" />
								</Label>
							</Controls>
						</Control>
						<Control name="$(parent)ScrollableList" inherits="ZO_ScrollList">
							<Anchor point="TOPLEFT" relativeTo="$(parent)Header" relativePoint="BOTTOMLEFT" />
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" />
							<Controls>
								<!-- <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" edgeColor="0000FF" centerColor="00FF00" /> -->
							</Controls>
						</Control>
					</Controls>
				</Control>
			</Controls>
		</Control>
    </Controls>
</GuiXml>